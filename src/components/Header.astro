<header
    class="sticky top-0 z-50 w-full border-b border-border bg-background-dark/95 backdrop-blur-sm"
>
    <div class="px-4 md:px-10 lg:px-40 flex justify-center">
        <div
            class="flex w-full max-w-[960px] items-center justify-between py-3"
        >
            <a href="/" class="flex items-center gap-3 group">
                <div
                    class="relative flex items-center justify-center size-10 rounded-xl bg-gradient-to-br from-cyan-400 to-cyan-600 shadow-lg shadow-cyan-500/20 text-white transform group-hover:scale-105 group-hover:rotate-3 transition-all duration-300"
                >
                    <span class="material-symbols-outlined text-2xl"
                        >tungsten</span
                    >
                    <div
                        class="absolute inset-0 rounded-xl bg-white/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                    >
                    </div>
                </div>
                <div class="flex flex-col">
                    <h2
                        class="text-slate-900 text-xl font-black leading-none tracking-tight group-hover:text-primary transition-colors"
                    >
                        BENGKEL<span class="text-primary">LAS</span>
                    </h2>
                    <span
                        class="text-[10px] font-bold text-slate-500 tracking-[0.2em] uppercase group-hover:text-slate-700 transition-colors"
                        >Lengkap & Profesional</span
                    >
                </div>
            </a>

            <!-- Desktop Menu -->
            <div class="hidden md:flex items-center gap-8">
                <nav class="flex items-center gap-6">
                    <a
                        class="text-slate-600 hover:text-primary transition-colors text-sm font-medium leading-normal"
                        href="/">Beranda</a
                    >
                    <a
                        class="text-slate-600 hover:text-primary transition-colors text-sm font-medium leading-normal"
                        href="#keunggulan">Mengapa Kami</a
                    >
                    <a
                        class="text-slate-600 hover:text-primary transition-colors text-sm font-medium leading-normal"
                        href="#layanan">Layanan</a
                    >
                    <a
                        class="text-slate-600 hover:text-primary transition-colors text-sm font-medium leading-normal"
                        href="#portofolio">Portofolio</a
                    >
                    <a
                        class="text-slate-600 hover:text-primary transition-colors text-sm font-medium leading-normal"
                        href="#kontak">Kontak</a
                    >
                </nav>
                <a
                    class="flex min-w-[84px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-10 px-4 bg-primary text-white hover:bg-primary/80 transition-colors text-sm font-bold leading-normal tracking-[0.015em]"
                    target="_blank"
                    href="https://wa.me/6281122312334"
                >
                    <span class="truncate">Hubungi Kami</span>
                </a>
            </div>

            <!-- Mobile Menu Button -->
            <button
                id="mobile-menu-btn"
                class="md:hidden text-slate-900 hover:text-primary transition-colors cursor-pointer"
            >
                <span class="material-symbols-outlined text-3xl">menu</span>
            </button>
        </div>
    </div>

    <!-- Mobile Menu Dropdown -->
    <div
        id="mobile-menu"
        class="hidden md:hidden border-t border-border bg-background-dark"
    >
        <div class="px-4 py-4 flex flex-col gap-4">
            <a
                class="text-slate-600 hover:text-primary transition-colors text-sm font-medium py-2"
                href="/">Beranda</a
            >
            <a
                class="text-slate-600 hover:text-primary transition-colors text-sm font-medium py-2"
                href="#layanan">Layanan</a
            >
            <a
                class="text-slate-600 hover:text-primary transition-colors text-sm font-medium py-2"
                href="#keunggulan">Mengapa Kami</a
            >
            <a
                class="text-slate-600 hover:text-primary transition-colors text-sm font-medium py-2"
                href="#portofolio">Portofolio</a
            >
            <a
                class="text-slate-600 hover:text-primary transition-colors text-sm font-medium py-2"
                href="#kontak">Kontak</a
            >
            <a
                class="flex w-full cursor-pointer items-center justify-center rounded-lg h-10 bg-primary text-white font-bold text-sm"
                href="#kontak"
            >
                Hubungi Kami
            </a>
        </div>
    </div>
</header>

<script>
    const mobileBtn = document.getElementById("mobile-menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");

    if (mobileBtn && mobileMenu) {
        mobileBtn.addEventListener("click", () => {
            mobileMenu.classList.toggle("hidden");
            const icon = mobileBtn.querySelector("span");
            if (icon) {
                icon.textContent = mobileMenu.classList.contains("hidden")
                    ? "menu"
                    : "close";
            }
        });

        // Close menu when clicking a link
        mobileMenu.querySelectorAll("a").forEach((link) => {
            link.addEventListener("click", () => {
                mobileMenu.classList.add("hidden");
                const icon = mobileBtn.querySelector("span");
                if (icon) icon.textContent = "menu";
            });
        });
    }
</script>
