<header
    class="sticky top-0 z-50 w-full border-b border-white/10 bg-charcoal/95 backdrop-blur-sm"
>
    <div class="px-4 md:px-10 lg:px-40 flex justify-center">
        <div
            class="flex w-full max-w-[1200px] items-center justify-between py-4"
        >
            <a href="/" class="flex items-center gap-3 group">
                <div
                    class="relative flex items-center justify-center size-10 rounded-xl bg-primary text-charcoal transform group-hover:scale-105 transition-all duration-300 shadow-[0_0_15px_rgba(6,182,212,0.4)]"
                >
                    <span class="material-symbols-outlined text-3xl"
                        >precision_manufacturing</span
                    >
                </div>
                <div class="flex flex-col">
                    <h2
                        class="text-white text-xl font-heading font-black leading-none tracking-tight group-hover:text-primary transition-colors uppercase"
                    >
                        MAS PETE<span class="text-primary"> LAS</span>
                    </h2>
                    <span
                        class="text-[10px] font-bold text-gray-400 tracking-[0.2em] uppercase group-hover:text-white transition-colors"
                        >Profesional & Bergaransi</span
                    >
                </div>
            </a>

            <!-- Desktop Menu -->
            <div class="hidden md:flex items-center gap-8">
                <nav class="flex items-center gap-8">
                    <a
                        class="text-gray-300 hover:text-primary transition-colors text-sm font-medium leading-normal uppercase tracking-wide"
                        href="/">Beranda</a
                    >
                    <a
                        class="text-gray-300 hover:text-primary transition-colors text-sm font-medium leading-normal uppercase tracking-wide"
                        href="#keunggulan">Keunggulan</a
                    >
                    <a
                        class="text-gray-300 hover:text-primary transition-colors text-sm font-medium leading-normal uppercase tracking-wide"
                        href="#layanan">Layanan</a
                    >
                    <a
                        class="text-gray-300 hover:text-primary transition-colors text-sm font-medium leading-normal uppercase tracking-wide"
                        href="#portofolio">Portofolio</a
                    >
                </nav>
                <a
                    class="flex min-w-[84px] cursor-pointer items-center justify-center overflow-hidden rounded h-10 px-6 bg-primary text-white hover:bg-white hover:text-primary transition-colors text-sm font-bold leading-normal tracking-wide uppercase shadow-[0_0_20px_rgba(6,182,212,0.5)] hover:shadow-[0_0_25px_rgba(255,255,255,0.6)]"
                    target="_blank"
                    rel="noopener noreferrer"
                    href="https://wa.me/6283873346839"
                >
                    <span class="truncate">Konsultasi</span>
                </a>
            </div>

            <!-- Mobile Menu Button -->
            <button
                id="mobile-menu-btn"
                class="md:hidden text-white hover:text-primary transition-colors cursor-pointer"
            >
                <span class="material-symbols-outlined text-3xl">menu</span>
            </button>
        </div>
    </div>

    <!-- Mobile Menu Dropdown -->
    <div
        id="mobile-menu"
        class="hidden md:hidden border-t border-white/10 bg-charcoal"
    >
        <div class="px-4 py-6 flex flex-col gap-4">
            <a
                class="text-gray-300 hover:text-primary transition-colors text-base font-bold uppercase tracking-wide py-2 border-b border-white/5"
                href="/">Beranda</a
            >
            <a
                class="text-gray-300 hover:text-primary transition-colors text-base font-bold uppercase tracking-wide py-2 border-b border-white/5"
                href="#layanan">Layanan</a
            >
            <a
                class="text-gray-300 hover:text-primary transition-colors text-base font-bold uppercase tracking-wide py-2 border-b border-white/5"
                href="#keunggulan">Keunggulan</a
            >
            <a
                class="text-gray-300 hover:text-primary transition-colors text-base font-bold uppercase tracking-wide py-2 border-b border-white/5"
                href="#portofolio">Portofolio</a
            >
            <a
                class="flex w-full cursor-pointer items-center justify-center rounded-none h-12 bg-primary text-charcoal font-black uppercase tracking-widest text-sm mt-4"
                href="https://wa.me/6283873346839"
            >
                Hubungi Kami
            </a>
        </div>
    </div>
</header>

<script>
    const mobileBtn = document.getElementById("mobile-menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");

    if (mobileBtn && mobileMenu) {
        mobileBtn.addEventListener("click", () => {
            mobileMenu.classList.toggle("hidden");
            const icon = mobileBtn.querySelector("span");
            if (icon) {
                icon.textContent = mobileMenu.classList.contains("hidden")
                    ? "menu"
                    : "close";
            }
        });

        // Close menu when clicking a link
        mobileMenu.querySelectorAll("a").forEach((link) => {
            link.addEventListener("click", () => {
                mobileMenu.classList.add("hidden");
                const icon = mobileBtn.querySelector("span");
                if (icon) icon.textContent = "menu";
            });
        });
    }
</script>
