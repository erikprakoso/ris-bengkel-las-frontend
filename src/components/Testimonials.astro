---
const testimonials = [
    {
        name: "Bpk. Hendra",
        role: "Perumahan Grand City",
        content:
            "Pengerjaan kanopi sangat rapi, tukangnya sopan dan kerjanya cepat. Hasil lasannya halus banget, beda sama bengkel lain.",
        stars: 5,
    },
    {
        name: "Ibu Sarah",
        role: "Cluster Harmony",
        content:
            "Harga sangat transparan dari awal. Pagar minimalis saya jadi tepat waktu sesuai janji. Recommended!",
        stars: 5,
    },
    {
        name: "Bpk. Wijaya",
        role: "Ruko Modern Land",
        content:
            "Pesan rolling door untuk ruko, hasilnya memuaskan. Rel lancar dan tidak berisik. Mantap!",
        stars: 5,
    },
    {
        name: "Ibu Ani",
        role: "Vila Indah",
        content:
            "Teralis jendelanya bagus, motifnya sesuai request. Catnya juga rapi tidak belepotan.",
        stars: 4,
    },
];

// Double the data for seamless loop
const allTestimonials = [...testimonials, ...testimonials];
---

<div class="flex flex-col gap-8 flex-1" data-aos="fade-right">
    <div class="flex items-center gap-2 mb-2">
        <span class="h-1 w-10 bg-primary"></span>
        <h2 class="text-primary font-bold uppercase tracking-widest text-sm">
            Testimoni
        </h2>
    </div>
    <h2 class="text-white text-3xl font-heading font-black mt-[-1rem]">
        Kata Pelanggan
    </h2>

    <!-- Marquee Container -->
    <div
        class="relative h-[500px] overflow-hidden flex flex-col after:absolute after:bottom-0 after:left-0 after:w-full after:h-20 after:bg-gradient-to-t after:from-background-dark after:to-transparent before:absolute before:top-0 before:left-0 before:w-full before:h-10 before:bg-gradient-to-b before:from-background-dark before:to-transparent before:z-10"
    >
        <div class="flex flex-col gap-4 animate-scroll-vertical hover:pause">
            {
                allTestimonials.map((item) => (
                    <div class="bg-charcoal-light p-6 border-l-4 border-primary shrink-0 hover:bg-white/5 transition-colors">
                        <div class="flex text-primary mb-3">
                            {Array.from({ length: 5 }).map((_, i) => (
                                <span
                                    class="material-symbols-outlined text-sm"
                                    style={
                                        i < item.stars
                                            ? "font-variation-settings: 'FILL' 1;"
                                            : "font-variation-settings: 'FILL' 0;"
                                    }
                                >
                                    star
                                </span>
                            ))}
                        </div>
                        <p class="text-gray-300 text-sm mb-4 leading-relaxed italic">
                            "{item.content}"
                        </p>
                        <div class="flex items-center gap-3">
                            <div class="size-10 rounded-full bg-gray-700 flex items-center justify-center text-white font-bold text-xs ring-2 ring-primary/20">
                                {item.name.charAt(0)}
                            </div>
                            <div>
                                <p class="text-white text-sm font-bold">
                                    {item.name}
                                </p>
                                <p class="text-gray-500 text-xs uppercase tracking-wider">
                                    {item.role}
                                </p>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</div>

<style>
    @keyframes scroll-vertical {
        0% {
            transform: translateY(0);
        }
        100% {
            transform: translateY(-50%);
        }
    }
    .animate-scroll-vertical {
        animation: scroll-vertical 30s linear infinite;
    }
    .hover\:pause:hover {
        animation-play-state: paused;
    }
</style>
